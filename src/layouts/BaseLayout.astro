---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Blood & Bourbon Fight League - Where honor meets the dirt." } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | BBFL</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="bg-bourbon-dark text-white shadow-lg sticky top-0 z-50">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href={`${baseUrl}`} class="flex items-center gap-3">
            <div class="text-3xl font-bold tracking-tighter">BBFL</div>
          </a>

          <ul class="hidden md:flex items-center gap-6 text-sm font-medium">
            <li><a href={`${baseUrl}`} class="hover:text-[--parchment] transition">Home</a></li>
            <li><a href={`${baseUrl}events/`} class="hover:text-[--parchment] transition">Events</a></li>
            <li><a href={`${baseUrl}fighters/`} class="hover:text-[--parchment] transition">Fighters</a></li>
            <li><a href={`${baseUrl}rankings/`} class="hover:text-[--parchment] transition">Rankings</a></li>
            <li><a href={`${baseUrl}rules/`} class="hover:text-[--parchment] transition">Rules</a></li>
            <li><a href={`${baseUrl}media/`} class="hover:text-[--parchment] transition">Media</a></li>
            <li><a href={`${baseUrl}about/`} class="hover:text-[--parchment] transition">About</a></li>
          </ul>

          <button id="mobile-menu-button" class="md:hidden p-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-2">
          <ul class="flex flex-col gap-3 text-sm font-medium">
            <li><a href={`${baseUrl}`} class="block hover:text-[--parchment] transition">Home</a></li>
            <li><a href={`${baseUrl}events/`} class="block hover:text-[--parchment] transition">Events</a></li>
            <li><a href={`${baseUrl}fighters/`} class="block hover:text-[--parchment] transition">Fighters</a></li>
            <li><a href={`${baseUrl}rankings/`} class="block hover:text-[--parchment] transition">Rankings</a></li>
            <li><a href={`${baseUrl}rules/`} class="block hover:text-[--parchment] transition">Rules</a></li>
            <li><a href={`${baseUrl}media/`} class="block hover:text-[--parchment] transition">Media</a></li>
            <li><a href={`${baseUrl}about/`} class="block hover:text-[--parchment] transition">About</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="bg-[--charcoal] text-white py-8 mt-12">
      <div class="container mx-auto px-4 text-center">
        <p class="text-lg font-bold text-bourbon mb-2">Blood & Bourbon Fight League</p>
        <p class="text-sm text-gray-400 mb-4">"Where honor meets the dirt."</p>
        <p class="text-xs text-gray-500">Â© {new Date().getFullYear()} BBFL. All rights reserved.</p>
      </div>
    </footer>

    <script>
      document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
        const menu = document.getElementById('mobile-menu');
        menu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
