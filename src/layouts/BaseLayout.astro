---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
}

const {
  title,
  description = "Blood & Bourbon Fight League - Where honor meets the underground.",
  image = "/og-image.svg",
  type = "website"
} = Astro.props;

const baseUrl = import.meta.env.BASE_URL;
const siteUrl = import.meta.env.SITE || "https://bbfl-frontier.github.io";
const fullTitle = `${title} | BBFL`;
const fullImageUrl = new URL(image, siteUrl).toString();
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:site_name" content="Blood & Bourbon Fight League" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageUrl} />

    <!-- Theme Color -->
    <meta name="theme-color" content="#7B2E2E" />
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="bg-bourbon-dark text-white shadow-lg sticky top-0 z-50">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center gap-3">
            <div class="text-3xl font-bold tracking-tighter">BBFL</div>
          </a>

          <ul class="hidden md:flex items-center gap-6 text-sm font-medium">
            <li><a href="/" class="hover:text-gray-300 transition">Home</a></li>
            <li><a href="/events/" class="hover:text-gray-300 transition">Events</a></li>
            <li><a href="/fighters/" class="hover:text-gray-300 transition">Fighters</a></li>
            <li><a href="/rankings/" class="hover:text-gray-300 transition">Rankings</a></li>
            <li><a href="/officials/" class="hover:text-gray-300 transition">Officials</a></li>
            <li><a href="/rules/" class="hover:text-gray-300 transition">Rules</a></li>
            <li><a href="/media/" class="hover:text-gray-300 transition">Media</a></li>
            <li><a href="/about/" class="hover:text-gray-300 transition">About</a></li>
          </ul>

          <button id="mobile-menu-button" class="md:hidden p-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-2">
          <ul class="flex flex-col gap-3 text-sm font-medium">
            <li><a href="/" class="block hover:text-gray-300 transition">Home</a></li>
            <li><a href="/events/" class="block hover:text-gray-300 transition">Events</a></li>
            <li><a href="/fighters/" class="block hover:text-gray-300 transition">Fighters</a></li>
            <li><a href="/rankings/" class="block hover:text-gray-300 transition">Rankings</a></li>
            <li><a href="/officials/" class="block hover:text-gray-300 transition">Officials</a></li>
            <li><a href="/rules/" class="block hover:text-gray-300 transition">Rules</a></li>
            <li><a href="/media/" class="block hover:text-gray-300 transition">Media</a></li>
            <li><a href="/about/" class="block hover:text-gray-300 transition">About</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="bg-gray-900 text-white py-8 mt-12">
      <div class="container mx-auto px-4 text-center">
        <p class="text-lg font-bold text-bourbon mb-2">Blood & Bourbon Fight League</p>
        <p class="text-sm text-gray-300 mb-4">"Where honor meets the dirt."</p>
        <p class="text-xs text-gray-400">Est. 1912</p>
      </div>
    </footer>

    <script>
      document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
        const menu = document.getElementById('mobile-menu');
        menu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
