---
interface Props {
  division: string;
  size?: 'sm' | 'md' | 'lg';
}

const { division, size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'text-xs px-2 py-1',
  md: 'text-sm px-3 py-1',
  lg: 'text-base px-4 py-2'
};
---

<span class={`inline-block bg-bourbon text-white rounded-full font-semibold ${sizeClasses[size]}`}>
  {division}
</span>
