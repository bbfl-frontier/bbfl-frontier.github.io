---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="bg-bourbon-dark text-white py-12 md:py-20">
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-5xl md:text-7xl font-black tracking-tighter mb-4">{title}</h1>
    {subtitle && <p class="text-lg md:text-xl text-gray-300 max-w-2xl mx-auto">{subtitle}</p>}
  </div>
</div>
